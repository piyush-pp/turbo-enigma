# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://appoint_user:appoint_password@localhost:5432/appoint_db

# Redis (for job queue and caching)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://appoint.local

# Email Configuration
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@appoint.local

# Frontend URL (for email links, etc.)
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=info
